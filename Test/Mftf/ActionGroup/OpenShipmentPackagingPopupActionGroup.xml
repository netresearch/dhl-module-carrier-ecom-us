<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="OpenShipmentPackagingPopupActionGroup">
        <click stepKey="openNewShipmentPage" selector="{{AdminOrderDetailsMainActionsSection.ship}}"/>
        <waitForPageLoad stepKey="openNewShipmentPageLoad"/>
        <click stepKey="enableLabelSubmission" selector="{{AdminShipmentMainActionsSection.createLabelCheckbox}}"/>
        <click stepKey="openPackagingPopup" selector="{{AdminShipmentMainActionsSection.submitShipment}}"/>
        <waitForLoadingMaskToDisappear stepKey="packagingPopupLoaded"/>
        <see stepKey="packagingPopupVisible" selector="Shipment Setup"/>
    </actionGroup>
    <actionGroup name="SubmitPackagingPopupActionGroup">
        <click stepKey="savePackagingPopup" selector="{{AdminShipmentPackagingPopupSection.submitButton}}"/>
        <waitForLoadingMaskToDisappear stepKey="waitForPackagingPopupSubmit"/>
        <seeInCurrentUrl url="{{AdminOrderDetailsPage.url}}" stepKey="seeViewOrderPageShipping"/>
        <see selector="{{AdminOrderDetailsMessagesSection.successMessage}}" userInput="The shipment has been created." stepKey="seeShipmentCreateSuccess"/>
    </actionGroup>
</actionGroups>
