<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- # sdk preferences -->

    <!-- # virtual types -->
    <virtualType name="Dhl\EcomUs\Model\Pipeline\Rate\RateResponseProcessor\Virtual" type="Dhl\ShippingCore\Model\Pipeline\Rate\RateResponseProcessor">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="carrierDetails" xsi:type="object">Dhl\ShippingCore\Model\Pipeline\Rate\ResponseProcessor\CarrierDetails</item>
                <item name="freeShipping" xsi:type="object">Dhl\ShippingCore\Model\Pipeline\Rate\ResponseProcessor\FreeShipping</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Dhl\EcomUs\Model\Rate\Emulation\RateRequestService\Virtual" type="Dhl\ShippingCore\Model\Rate\Emulation\RateRequestService">
        <arguments>
            <argument name="responseProcessor" xsi:type="object">Dhl\EcomUs\Model\Pipeline\Rate\RateResponseProcessor\Virtual</argument>
        </arguments>
    </virtualType>

    <!-- # argument di overrides -->
    <type name="Dhl\EcomUs\Model\Rate\RatesManagement">
        <arguments>
            <argument name="rateRequestService" xsi:type="object">Dhl\EcomUs\Model\Rate\Emulation\RateRequestService\Virtual</argument>
        </arguments>
    </type>

    <!-- config path type pools-->
    <type name="Magento\Config\Model\Config\TypePool">
        <arguments>
            <argument name="sensitive" xsi:type="array"/>
            <argument name="environment" xsi:type="array"/>
        </arguments>
    </type>
</config>
